{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/converter/src",
  "projectType": "library",
  "targets": {
    "build-base": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/converter",
        "main": "packages/converter/src/index.ts",
        "tsConfig": "packages/converter/tsconfig.lib.json",
        "assets": ["packages/converter/*.md"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build-base converter",
          "cp LICENSE dist/packages/converter"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs converter {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/converter/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/converter"],
      "options": {
        "jestConfig": "packages/converter/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
